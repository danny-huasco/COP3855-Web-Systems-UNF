
@{
    var book = ViewBag.book;
    ViewData["title"] = book.title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <img src="@book.photo" class="card-img-top" alt="Book cover">
                <div class="card-body">
                    <h5 class="card-title">@book.title</h5>
                    <p class="card-text">Author: @book.author</p>
                    <p class="card-text">ISBN: @book.isbn</p>
                    <p class="card-text">Price: $@book.price</p>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.isbn" class="btn btn-primary">Add to Cart</a>
                </div>
                
                <div class="card-footer text-muted">
                    <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
